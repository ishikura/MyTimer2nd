<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:WpfApplication1"
        Title="MainWindow" Height="221" Width="509">
    <Grid Height="184" Width="490">
        <Grid.Resources>
            <c:TimeSpanToStringConverter x:Key="TimeSpanToStr"/>
        </Grid.Resources>
        <Button Content="{Binding StartOrPauseBtnStr}" Height="23" HorizontalAlignment="Left" Margin="323,153,0,0" Name="StartPauseBtn" VerticalAlignment="Top" Width="75" Command="{Binding StartOrPauseCommand}" IsEnabled="{Binding isEnableStartPauseBtn}" />
        <Button Content="RESET" Height="23" HorizontalAlignment="Left" Margin="404,153,0,0" Name="reset" Command="{Binding ResetCommand}"  VerticalAlignment="Top" Width="75"  />
        <Label Content="{Binding RemainTimeStr,Mode=OneWay}" Height="106" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Width="467" FontSize="72" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="323,124,0,0" Name="comboBox1" VerticalAlignment="Top" Width="156"
                  ItemsSource="{Binding Path=TimerValueList,
                  Converter={StaticResource TimeSpanToStr}}"
                  SelectedIndex="{Binding SelectedTimeSpanListId}"/>
    </Grid>
</Window>
